{
  "version": "0.2.0",
  "inputs": [
    {
      "id": "environment",
      "type": "pickString",
      "description": "Choose the environment file you want to use",
      "default": "local",
      "options": [
        "local",
        "staging",
        "production",
      ]
    },
  ],
  "configurations": [
    {
      "name": "üêç‚ûïPython Debugger: Current File with Arguments",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "args": "${command:pickArgs}"
    },
    {
      "name": "üìã Report Launcher",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/report_launcher.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      }
    },
    {
      "name": "‚¨áÔ∏è Download Report Inputs",
      "type": "debugpy",
      "request": "launch",
      "module": "api.downloadInputs",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      },
      "args": [
        "{env:DATA_ROOT}/build/inputs",
        "--stage",
        "${input:environment}",
      ]
    },
    {
      "name": "‚¨ÜÔ∏è Upload Report Outputs",
      "type": "debugpy",
      "request": "launch",
      "module": "api.uploadOutputs",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      },
      "args": [
        "{env:DATA_ROOT}/build/outputs",
        "--stage",
        "${input:environment}"
      ]
    },
    {
      "name": "‚¨ÜÔ∏è Upload PUBLIC REPORT",
      "type": "debugpy",
      "request": "launch",
      "module": "api.uploadPublic",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      },
      "args": [
        "--stage",
        "${input:environment}"
      ]
    },
    {
      "name": "üêç Python Debugger: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      }
    },
    // This is what integrates with the Testing sidebar. Don't change it unless you know what you're doing.
    {
      "name": "üêç Python: Debug Tests",
      "type": "debugpy",
      "request": "launch",
      "purpose": [
        "debug-test"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      },
      "justMyCode": false
    },
  ]
}
